{# src/Helios/BlogBundle/Resources/views/Blog/voir.html.twig #}

{% extends "HeliosBlogBundle::layout.html.twig" %}

{% block title %}
    {{ article.titre }} - {{ parent() }}
{% endblock %}

{% block heliosblog_body %}

  {% include "HeliosBlogBundle:Blog:article.html.twig" %}

  {% for commentaire in commentaires %}
    {% include "HeliosBlogBundle:Blog:commentaire.html.twig" %}
  {% else %}
    <p>Pas encore de commentaire.</p>
  {% endfor %}

  <h3>Poster un nouveau commentaire</h3>
  <form method="post" action="{{ path('heliosblog_ajouter_commentaire', {'id': article.id , 'blog': app.request.attributes.get('blog')}) }}">
    {{ form_widget(form) }}
    <input type="submit" value="Ajouter" class="btn btn-primary" />
  </form>

{% endblock %}